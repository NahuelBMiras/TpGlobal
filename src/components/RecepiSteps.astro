<script>
  import { recipeSteps } from "../components/recipe.js";
  const recipeStpsList = document.querySelector(".steps-list");
  const recipeStpsText = recipeSteps().recipeSteps;

  recipeStpsText.forEach((stepText) => {
    const stepTextLenght = stepText.length;
    const stepElemet = document.createElement("li");
    stepElemet.classList.add("step");
    recipeStpsList.appendChild(stepElemet);

    const stepElementText = document.createElement("li");
    stepElementText.classList.add("step-title");
    stepElemet.appendChild(stepElementText);
    stepElementText.innerHTML = stepText[0];

    const recipeSubstepsList = document.createElement("ul");
    recipeSubstepsList.classList.add("recipe-substeps");
    stepElemet.appendChild(recipeSubstepsList);

    let i = 1;
    while (i < stepTextLenght) {
      const recipeSubsteps = document.createElement("li");
      recipeSubstepsList.appendChild(recipeSubsteps);
      recipeSubsteps.innerHTML = stepText[i];
      i++;
    }
  });

